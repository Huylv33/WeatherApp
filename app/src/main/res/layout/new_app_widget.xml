<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_widget"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip">

        <ImageView
            android:id="@+id/icon_weather_widget"
            android:layout_width="52.0dip"
            android:layout_height="52.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip" />

        <TextView
            android:id="@+id/text_location_widget"
            style="@style/WidgetTextViewNormal"
            android:layout_below="@id/icon_weather_widget"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10.0dip"


            android:textSize="@dimen/_14ssp"
            />

        <TextView
            android:id="@+id/text_weather_widget"
            style="@style/WidgetTextViewNormal"
            android:layout_below="@id/icon_weather_widget"
            android:layout_toRightOf="@id/text_location_widget"
            android:layout_width="match_parent"
            android:layout_marginLeft="14.0dip"

            android:textSize="@dimen/_14ssp"
            />

        <TextView
            android:id="@+id/text_temperature_widget"
            style="@style/WidgetTextViewNormal"
            android:layout_toRightOf="@id/icon_weather_widget"
            android:layout_above="@id/text_weather_widget"
            android:layout_width="wrap_content"
            android:textSize="40.0sp" />
    </RelativeLayout>
</LinearLayout>