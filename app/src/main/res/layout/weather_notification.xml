<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://sche'mas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="12.0dip"
    android:paddingTop="10.0dip"
    android:paddingRight="12.0dip"
    android:paddingBottom="10.0dip">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper9"/>

    <ImageView
        android:id="@id/icon_weather"
        android:layout_width="@dimen/_66sdp"
        android:layout_height="@dimen/_66sdp"
        android:layout_marginRight="@dimen/_18sdp"

        android:src="@drawable/img_fewclouds_day" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_weather"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_18sdp"
                android:textColor="#FFFFFF"
                android:text="101111"
                android:textSize="18.0sp" />
            <TextView
                android:id="@id/text_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1000000"
                android:layout_toRightOf="@id/text_temperature"
                android:paddingTop="@dimen/_18sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:textColor="#FFFFFF"
                android:textSize="16.0sp" />


        </RelativeLayout>
        <TextView
            android:id="@id/text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2345678"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/_18sdp"
            android:textColor="#ffffff"
            android:textSize="13.0sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="@bool/is_right_to_left"
            android:layout_marginBottom="2.0dip"
            android:padding="@dimen/_8sdp"
            android:text="1234567"
            android:textColor="#ffffff"
            android:textSize="13.0sp" />

    </RelativeLayout>
</RelativeLayout>